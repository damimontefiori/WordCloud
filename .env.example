# Variables de entorno para desarrollo local
# Copia este archivo como .env.local y completa con tus credenciales

# Firebase Configuration
# Copia estos valores desde Firebase Console → Project settings → Your apps (Web)
VITE_FIREBASE_API_KEY=YOUR_WEB_API_KEY
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
# Importante: usar dominio appspot.com (no firebasestorage.app)
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=YOUR_SENDER_ID
VITE_FIREBASE_APP_ID=1:YOUR_SENDER_ID:web:abcdef
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Configuración de la aplicación
VITE_APP_NAME=WordCloud App
VITE_APP_VERSION=1.0.0
VITE_API_URL=http://localhost:5001/tu_proyecto/us-central1

# Emulators (opcional en desarrollo)
VITE_USE_EMULATORS=false
